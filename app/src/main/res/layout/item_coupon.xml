<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_coupon"
        android:paddingHorizontal="12dp"
        android:paddingVertical="18dp">

        <CheckBox
            android:id="@+id/check_box_coupon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="@color/dark_grey"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/check_box_coupon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/check_box_coupon"
            app:layout_constraintTop_toTopOf="@id/check_box_coupon"
            tools:text="5,000원 할인 쿠폰" />

        <TextView
            android:id="@+id/tv_coupon_info_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/dark_grey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/check_box_coupon"
            app:layout_constraintTop_toBottomOf="@id/check_box_coupon"
            tools:text="만료일: 2024년 11월 30일" />

        <TextView
            android:id="@+id/tv_coupon_info_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/dark_grey"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/check_box_coupon"
            app:layout_constraintTop_toBottomOf="@id/tv_coupon_info_1"
            tools:text="최소 주문 금액: 100,000원" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
